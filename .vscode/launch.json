{
    "version": "2.0.0",
    "configurations": [
      {
        "name": "Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "./build/simple-tcp-server",
        "cwd": "${workspaceRoot}"
      },
      {
        "name": "Debug Chat Server",
        "type": "cppdbg",
        "request": "launch",
        "program": "./build/simple-chat-server",
        "cwd": "${workspaceRoot}"
      },
      {
        "name": "Run Unit Tests",
        "type": "cppdbg",
        "request": "launch",
        "program": "./build/simple-tcp-server-tests",
        "cwd": "${workspaceRoot}"
      },
      {
        "name": "Debug Specific Unit Test",
        "type": "cppdbg",
        "request": "launch",
        "program": "./build/simple-tcp-server-tests",
        "args": ["--gtest_filter=TCPServerTest.SimpleBroadcastingServer"],
        "cwd": "${workspaceRoot}"
      }
    ]
}
